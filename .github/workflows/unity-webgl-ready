name: Continue after reboot

on:
  workflow_dispatch:

jobs:
  continue:
    name: Continue after reboot
    runs-on: ubuntu-${env.UBUNTU_VERSION}
    steps:
      - name: Create annotation for build error
        run: echo "::notice::Reboot ready!"

      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up Unity
        uses: kuler90/setup-unity@v1.1.0
        with:
          unity-version: 2022.1.7f1
          project-path: ${{ github.workspace }}/Project
          unity-modules: webgl

      - name: Activate Unity
        uses: kuler90/activate-unity@v1.1.3
        with:
          unity-username: ${{ secrets.UNITY_USERNAME }}
          unity-password: ${{ secrets.UNITY_PASSWORD }}

      - name: Build Unity
        uses: kuler90/build-unity@v1.0.4
        with:
          build-target: WebGL
          build-path: ./dist/
